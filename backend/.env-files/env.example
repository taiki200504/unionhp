# バックエンド環境変数設定ファイル
# .envとしてコピーし、適切な値に変更してください

# アプリケーション設定
NODE_ENV=production
PORT=5001
UPLOAD_DIR=/var/www/union-uploads

# データベース設定
MONGODB_URI=mongodb://localhost:27017/union_hp

# 認証設定
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# デプロイ設定
DEPLOY_HOST=your-server-hostname
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/union-backend

# メール設定
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASS=your-email-password
MAIL_FROM=no-reply@example.com 